{
  "include": ["src", "types"],
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}